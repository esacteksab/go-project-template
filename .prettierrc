{
  "plugins": [
    "prettier-plugin-sh",
    "prettier-plugin-pkg",
    "prettier-plugin-toml",
    "prettier-plugin-go-template"
  ],
  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "parser": "go-template",
        "goTemplateBracketSpacing": true,
        "bracketSameLine": true,
        "embeddedLanguageFormatting": "off",
        "htmlWhitespaceSensitivity": "strict",
        "tabWidth": 2
      }
    }
  ]
}
